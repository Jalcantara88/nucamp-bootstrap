


body {
    font-family: "Open Sans", sans-serif;
}

h1, h2, h3 {
    font-family: "Lobster", cursive;
}

h2 {
    color: blue;
}

header h2 {
    color: lightgray;
}

.siteFooter{
    background-image: linear-gradient(pink, white);
    padding: 20px 0;
}

.jumbotron{
    padding: 30px;
    background-image: linear-gradient(to right, lightblue, purple, red);
    color: white;
    margin: 0px;
}

.row-content{
    padding: 50px 0;
    border-bottom: 1px ridge;
    min-height: 200px;
}

.navbar{
    background-color: lightcoral;
}

.tab-content{
    border: 1px solid #ddd;
    border-top: none;
    padding: 10px;
}

.carousel-caption {
    background-color: rgba(0, 0, 0, .5)
}

.carousel {
    border: solid lightblue;
}

#carouselButton {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 100;
}